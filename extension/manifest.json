{
  "manifest_version": 3,
  "name": "PhishNet - Real Time Protection",
  "version": "1.1",
  "description": "AI-Powered Real-Time Phishing Detection",
  "permissions": ["activeTab"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Scan with PhishNet"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}